unit uPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.StdCtrls;

type
  TFormPrincipal = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    MainMenu1: TMainMenu;
    Cadastro1: TMenuItem;
    Cadastro2: TMenuItem;
    GrupodeReceitasDespesas1: TMenuItem;
    Clientes1: TMenuItem;
    Clientes2: TMenuItem;
    N1: TMenuItem;
    N2: TMenuItem;
    Movimento1: TMenuItem;
    ContasaReceber1: TMenuItem;
    ContasaReceber2: TMenuItem;
    MovimentodeCaixa1: TMenuItem;
    MovimentodeCaixa2: TMenuItem;
    Contasapagarporvencimento1: TMenuItem;
    Contasapagarporvencimento2: TMenuItem;
    FluxodeCaixa1: TMenuItem;
    procedure Cadastro2Click(Sender: TObject);
    procedure N2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormPrincipal: TFormPrincipal;

implementation

{$R *.dfm}

uses uConTipo, uDM;

procedure TFormPrincipal.Cadastro2Click(Sender: TObject);
begin
     FormConTipo := TFormConTipo.Create(Application);
     FormConTipo.showmodal;
     FormConTipo.free;

end;

procedure TFormPrincipal.N2Click(Sender: TObject);
begin
Application.Terminate;
end;

end.
